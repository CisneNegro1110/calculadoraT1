<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Emaiz"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:inputType="numberDecimal"
        android:hint="Maíz"/>

    <EditText
        android:id="@+id/Eharina"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/Emaiz"
        android:inputType="number"
        android:hint="EHarina"/>

    <EditText
        android:id="@+id/Eaguas"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/harina"
        android:inputType="number"
        android:hint="Aguas"/>

    <EditText
        android:id="@+id/Ecocaml"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:hint="600ml"
        android:layout_toEndOf="@+id/aguas"
        android:layout_marginStart="13dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/Eempaque"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/cocaml"
        android:hint="Empaque"
        android:inputType="number" />

    <EditText
        android:id="@+id/maiz"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:inputType="numberDecimal"
        android:hint="Maíz"/>

    <EditText
        android:id="@+id/harina"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/maiz"
        android:inputType="number"
        android:hint="Harina"/>

    <EditText
        android:id="@+id/aguas"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/harina"
        android:inputType="number"
        android:hint="Aguas"/>


    <EditText
            android:id="@+id/cocaml"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:hint="600ml"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/aguas"
            android:layout_marginStart="13dp"
            android:inputType="number"/>

    <EditText
        android:id="@+id/empaque"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/cocaml"
        android:hint="Empaque"
        android:inputType="number" />

        <Button
            android:id="@+id/igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>


</RelativeLayout>